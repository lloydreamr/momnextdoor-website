# Backend Environment Variables
NODE_ENV=development
PORT=3000

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Database (PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/momnextdoor

# Google Calendar API (Optional - will work without it)
# GOOGLE_CLIENT_ID=your_client_id_here
# GOOGLE_CLIENT_SECRET=your_client_secret_here
# GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
# GOOGLE_CALENDAR_ID=primary

# Email Service (Optional)
# SENDGRID_API_KEY=your_sendgrid_key_here
# EMAIL_FROM=noreply@momnextdoor.com

# Security
JWT_SECRET=development_jwt_secret_change_in_production
SESSION_SECRET=development_session_secret_change_in_production

# Rate Limiting
API_RATE_WINDOW=15
API_RATE_LIMIT=100

# Admin
ADMIN_EMAIL=admin@momnextdoor.com
ADMIN_TOKEN=test-admin-token